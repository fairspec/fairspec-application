{
  "name": "fairspec",
  "type": "module",
  "version": "0.0.0-dev",
  "private": true,
  "engines": {
    "node": "^24.0.0",
    "pnpm": "^10.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "bump": "ncu -ws -u",
    "clean": "rm -rf **/node_modules",
    "compile": "pnpm -r compile",
    "coverage": "sensible-browser coverage/index.html",
    "generate": "pnpm --parallel generate",
    "format": "biome check --write",
    "lint": "biome check",
    "install:ci": "pnpm install --ignore-scripts",
    "prepare": "husky",
    "spec": "vitest run",
    "start:desktop": "pnpm --parallel -F website -F desktop start",
    "start:website": "pnpm --parallel -F engine -F website start",
    "test": "pnpm lint && pnpm type && pnpm spec",
    "type": "pnpm -r type"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@semantic-release/exec": "7.1.0",
    "@types/node": "24.2.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "conventional-changelog-conventionalcommits": "9.1.0",
    "dotenv": "17.2.3",
    "execa": "9.6.0",
    "husky": "9.1.7",
    "npm-check-updates": "18.0.1",
    "semantic-release": "24.2.9",
    "type-fest": "4.41.0",
    "typescript": "5.9.2",
    "vitest": "4.0.18",
    "vite": "7.3.1"
  },
  "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
